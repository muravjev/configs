{
  "files.eol": "\n",

  "prettier.requireConfig": true,

  "eslint.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.debug": false,
  "eslint.workingDirectories": [
    // Monorepo directories
    { "pattern": "./apps/*/" },
    { "pattern": "./packages/*/" }
  ],

  "cSpell.words": [
    "commitlint",
    "commitlintrc",
    "dbaeumer",
    "esbenp",
    "frontmatter",
    "lintstaged",
    "lintstagedrc",
    "muravjev",
    "npmrc",
    "remarkignore",
    "remarkrc",
    "sergey",
    "syncpack",
    "syncpackrc",
    "tsbuildinfo",
    "unifiedjs"
  ]
}
